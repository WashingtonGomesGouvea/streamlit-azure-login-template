# ============================================================================
# EXEMPLO DE CONFIGURAÇÃO - secrets.toml
# ============================================================================
# Copie este arquivo para .streamlit/secrets.toml e preencha com suas credenciais
# ⚠️ NUNCA COMMITE O ARQUIVO secrets.toml NO GIT!
# ============================================================================

# ============================================================================
# [graph] - Credenciais para ACESSO AO SHAREPOINT/ONEDRIVE (OPCIONAL)
# Este App precisa ter permissão "Files.Read.All" (Application permission)
# com consentimento do administrador
# ============================================================================
[graph]
tenant_id = "seu-tenant-id-aqui"
client_id = "client-id-do-app-com-files-read-all"
client_secret = "client-secret-do-app-sharepoint"

# OPÇÃO 1: OneDrive de um usuário específico
user_upn = "usuario@empresa.com"
file_path = "Pasta/SubPasta/arquivo.csv"  # Relativo a Documents/

# OPÇÃO 2: SharePoint Site (descomente e remova user_upn)
# hostname = "empresa.sharepoint.com"
# site_path = "sites/nome-do-site"
# library_name = "Documents"
# file_path = "Pasta/arquivo.csv"  # Relativo à biblioteca

# ============================================================================
# [auth] - Credenciais para LOGIN DO USUÁRIO
# Este App usa permissão "User.Read" (Delegated permission)
# ============================================================================
[auth]
tenant_id = "seu-tenant-id-aqui"
client_id = "client-id-do-app-de-login"
client_secret = "client-secret-do-app-de-login"

# URIs de redirecionamento (devem estar cadastradas no Azure Portal!)
redirect_uri_local = "http://localhost:8501"
redirect_uri_prod = "https://seu-app.streamlit.app"

# Escopo Microsoft Graph
scope = ["https://graph.microsoft.com/User.Read"]
