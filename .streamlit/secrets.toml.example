# Template de Configuração Azure AD para Login Microsoft
# ========================================================
# 
# INSTRUÇÕES:
# 1. Copie este arquivo para secrets.toml
# 2. Execute: python configure_azure.py (recomendado)
#    OU preencha manualmente os valores abaixo
#
# IMPORTANTE: Nunca commite o arquivo secrets.toml no Git!
# ========================================================

[auth]
# IDs do Azure Entra ID (obrigatório)
# Obtenha esses valores em: portal.azure.com > Entra ID > Registros de Aplicativos
tenant_id = "seu-tenant-id-aqui"
client_id = "seu-client-id-aqui"
client_secret = "seu-client-secret-aqui"

# URIs de redirecionamento (geradas automaticamente pelo configure_azure.py)
# IMPORTANTE: Adicione AMBAS as URIs no Azure Portal!
redirect_uri_local = "http://localhost:8501"
redirect_uri_prod = "https://seu-app.streamlit.app"

# Escopo Microsoft Graph (padrão já funciona para nome e email)
scope = ["https://graph.microsoft.com/User.Read"]

# [Opcional] Restrição por domínio de email
# domain_allowlist = ["synvia.com"]
